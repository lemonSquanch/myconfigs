# Contains my common linux configurations.
# This file is meant to be sourced..

# Aliases
alias gs="git status";
alias gd="git diff";
alias gk="gitk";

alias repo="repo --color=always --time";

alias df="df -h";

alias ll="ls -lah";
alias ls="ls --color=auto";
alias grep="grep --color";

# Variables
# Ensure gvim and other tools can inherit environment from ~/.bashrc
export BASH_ENV=~/.bashrc;
